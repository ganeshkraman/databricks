import pandas as pd
import csv

# Define input and output file paths
input_xlsx = "input.xlsx"
output_csv = "output.csv"

# Read the first sheet from the Excel file
df = pd.read_excel(input_xlsx, sheet_name=0)

# Write to CSV with comma delimiter and double quotes around all fields
df.to_csv(
    output_csv,
    index=False,                # Do not write row numbers
    quoting=csv.QUOTE_ALL,      # Quote all fields
    quotechar='"',              # Use double quotes
    sep=',',                    # Comma as delimiter (default)
    line_terminator='\n'        # Clean line endings
)

print(f"Converted '{input_xlsx}' to '{output_csv}' successfully.")
